<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="{{ title }}">
        <ActionItem icon="font://&#xf060;" class="fas" tap="{{ goBack }}" />
        <Label text="{{ title }}" />
    </ActionBar>

    <StackLayout>
        <StackLayout class="unitsOfMeasure">
            <FlexboxLayout class="unitOfMeasure convertFrom">
            </FlexboxLayout>
            <FlexboxLayout class="unitOfMeasure convertTo">
            </FlexboxLayout>
        </StackLayout>

        <Button ontap="swapUnits" />

        <FlexboxLayout class="numpad">
        </FlexboxLayout>
    </StackLayout>
</Page>
