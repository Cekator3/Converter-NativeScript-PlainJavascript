<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="{{ title }}">
        <NavigationButton android.systemIcon="ic_menu_back" tap="{{ goBack }}"/>
    </ActionBar>

    <StackLayout>
        <FlexboxLayout class="unitsOfMeasureConvertionTable">
            <FlexboxLayout class="unitOfMeasure convertFrom first">
                <Label class="Type" text="Тип" />
                <Label class="Value" text="999"/>
            </FlexboxLayout>
            <FlexboxLayout class="unitOfMeasure convertTo second">
                <Label class="Type" text="Тип" />
                <Label class="Value" text="999"/>
            </FlexboxLayout>
        </FlexboxLayout>

        <Button ontap="{{ swapUnits }}" text="Поменять местами" class="swapUnits" />

        <GridLayout class="numpad" columns="*, *, *, *" rows="*, *, *, *">
            <button text="7" col="0" row="0"/>
            <button text="8" col="1" row="0"/>
            <button text="9" col="2" row="0"/>
            <button text="4" col="0" row="1"/>
            <button text="5" col="1" row="1"/>
            <button text="6" col="2" row="1"/>
            <button text="1" col="0" row="2"/>
            <button text="2" col="1" row="2"/>
            <button text="3" col="2" row="2"/>
            <button text="0" col="0" colSpan="2" row="3"/>
            <button text="," col="2" row="3"/>
            <button class='operation fas' text="&#xf55a;" col="3" row="0" rowSpan="2" height="auto"/>
            <button class='operation' text="AC" col="3" row="2" rowSpan="2" height="auto"/>
        </GridLayout>
    </StackLayout>
</Page>
